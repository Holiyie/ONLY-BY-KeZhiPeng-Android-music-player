<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/musicbackground3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MessageActivity" >
        
    "

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pwddl"
        android:layout_alignLeft="@+id/zhlist"
        android:text="密码" />

    <EditText
        android:id="@+id/zhiddl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/zhlist"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/zhlist"
        android:ems="10" />

    <TextView
        android:id="@+id/zhlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/js"
        android:layout_below="@+id/js"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="73dp"
        android:text="账号id" />

    <TextView
        android:id="@+id/js"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:text="@string/hello" />

    <Button
        android:id="@+id/dl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="登录" />

    <EditText
        android:id="@+id/pwddl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/zhiddl"
        android:layout_below="@+id/zhiddl"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text="123456" >

        <requestFocus />
    </EditText>

</RelativeLayout>
